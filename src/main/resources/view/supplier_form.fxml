<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="1020.0" styleClass="root" stylesheets="@../css/supplier.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.AutoCareCenter.controller.SupplierFormController">

   <children>

      <!-- Header bar -->
      <Rectangle fill="#1a237e" height="70.0" width="1020.0" />
      <Label layoutX="440.0" layoutY="10.0" style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Manage Suppliers" textFill="WHITE" />
      <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="960.0" layoutY="15.0">
         <image>
            <Image url="@../asserts/people.png" />
         </image>
      </ImageView>

      <!-- Background for form -->
      <Rectangle arcHeight="15.0" arcWidth="15.0" fill="white" height="170.0" layoutX="60.0" layoutY="120.0" opacity="0.12" width="900.0" />

      <Label fx:id="lblId" layoutX="190.0" layoutY="165.0" prefHeight="26.0" prefWidth="200.0" styleClass="form-field" textFill="black" />

      <!-- Form Fields -->
      <Label layoutX="190.0" layoutY="140.0" styleClass="form-label" text="Supplier ID" />
      <JFXTextField fx:id="txtId" layoutX="190.0" layoutY="165.0" prefWidth="200.0" styleClass="form-field" />

      <Label layoutX="440.0" layoutY="140.0" styleClass="form-label" text="Supplier Name" />
      <JFXTextField fx:id="txtName" layoutX="440.0" layoutY="165.0" prefWidth="200.0" styleClass="form-field" />

      <Label layoutX="690.0" layoutY="140.0" styleClass="form-label" text="Contact" />
      <JFXTextField fx:id="txtContact" layoutX="690.0" layoutY="165.0" prefWidth="200.0" styleClass="form-field" />

      <Label layoutX="190.0" layoutY="220.0" styleClass="form-label" text="Address" />
      <JFXTextField fx:id="txtAddress" layoutX="190.0" layoutY="245.0" prefWidth="700.0" styleClass="form-field" />

      <!-- Buttons -->
      <JFXButton fx:id="btnDelete" layoutX="290.0" layoutY="305.0" onAction="#btnDeleteOnAction" prefHeight="32.0" prefWidth="90.0" styleClass="btn-danger" text="Delete" textFill="white">
         <cursor><Cursor fx:constant="HAND" /></cursor>
      </JFXButton>

      <JFXButton fx:id="btnClear" layoutX="395.0" layoutY="305.0" onAction="#btnClearOnAction" prefHeight="32.0" prefWidth="90.0" styleClass="btn-secondary" text="Clear" textFill="white" />

      <JFXButton fx:id="btnUpdate" layoutX="500.0" layoutY="305.0" onAction="#btnUpdateOnAction" prefHeight="32.0" prefWidth="90.0" styleClass="btn-warning" text="Update" textFill="white" />

      <JFXButton fx:id="btnSave" layoutX="605.0" layoutY="305.0" onAction="#btnSaveOnAction" prefHeight="32.0" prefWidth="90.0" styleClass="btn-primary" text="Save" textFill="white" />

      <!-- Table -->
      <TableView fx:id="tblSupplier" layoutX="64.0" layoutY="350.0" onMouseClicked="#getSupplier" prefHeight="330.0" prefWidth="900.0" style="-fx-background-color: white; -fx-background-radius: 10;">
         <columns>
            <TableColumn fx:id="colId" prefWidth="150.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="180.0" text="Name" />
            <TableColumn fx:id="colAddress" prefWidth="250.0" text="Address" />
            <TableColumn fx:id="colContact" prefWidth="150.0" text="Contact" />
         </columns>
      </TableView>

   </children>
</AnchorPane>
