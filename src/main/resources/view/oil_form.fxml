<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="1020.0" styleClass="root" stylesheets="@../css/oil.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.AutoCareCenter.controller.OilFormController">

   <children>

      <!-- Header -->
      <Rectangle fill="#1a237e" height="60" width="1020" />
      <Label layoutX="360" layoutY="12" style="-fx-font-size:28; -fx-font-weight:bold;" text="Manage Oil Materials" textFill="WHITE" />

      <!-- Form Background -->
      <Rectangle arcHeight="15" arcWidth="15" fill="white" height="214.0" layoutX="61.0" layoutY="133.0" opacity="0.12" width="900" />

      <!-- Row 1 -->
      <Label layoutX="190.0" layoutY="138.0" text="Material Code" />
      <JFXTextField fx:id="txtCode" layoutX="190.0" layoutY="163.0" prefWidth="200" styleClass="form-field" />

      <Label layoutX="440.0" layoutY="138.0" text="Description" />
      <JFXTextField fx:id="txtDescription" layoutX="440.0" layoutY="163.0" prefWidth="200" styleClass="form-field" />

      <Label layoutX="690.0" layoutY="138.0" text="Supplier" />
      <JFXComboBox fx:id="cmbSupId" layoutX="690.0" layoutY="163.0" prefWidth="150" styleClass="form-field" />

      <!-- Row 2 -->
      <Label layoutX="190.0" layoutY="213.0" text="Retail Price (Unit Price)" />
      <JFXTextField fx:id="txtUnitPrice" layoutX="190.0" layoutY="238.0" prefWidth="200" styleClass="form-field" />

      <Label layoutX="440.0" layoutY="213.0" text="Qty On Hand" />
      <JFXTextField fx:id="txtQtyOnHand" layoutX="440.0" layoutY="238.0" prefWidth="200" styleClass="form-field" />

      <Label layoutX="690.0" layoutY="213.0" text="Brand" />
      <JFXTextField fx:id="txtBrand" layoutX="690.0" layoutY="238.0" prefWidth="150" styleClass="form-field" />

      <!-- Row 3 (NEW) -->
      <Label layoutX="190.0" layoutY="283.0" text="Stock Price" />
      <JFXTextField fx:id="txtUnitCost" layoutX="190.0" layoutY="308.0" prefWidth="200" styleClass="form-field" />

      <Label layoutX="440.0" layoutY="283.0" text="Wholesale Price" />
      <JFXTextField fx:id="txtWholesalePrice" layoutX="440.0" layoutY="308.0" prefWidth="200" styleClass="form-field" />

      <!-- Buttons -->
      <JFXButton fx:id="btnSave" layoutX="597.0" layoutY="357.0" onAction="#btnSaveOnAction" prefWidth="90" text="Save" />

      <JFXButton fx:id="btnUpdate" layoutX="497.0" layoutY="357.0" onAction="#btnUpdateOnAction" prefWidth="90" text="Update" />

      <JFXButton fx:id="btnDelete" layoutX="397.0" layoutY="357.0" onAction="#btnDeleteOnAction" prefWidth="90" text="Delete" />

      <JFXButton fx:id="btnClear" layoutX="297.0" layoutY="357.0" onAction="#btnClearOnAction" prefWidth="90" text="Clear" />

      <!-- Table -->
      <TableView fx:id="tblMaterial" layoutX="35.0" layoutY="396.0" onMouseClicked="#getMaterials" prefHeight="300" prefWidth="932.0">

         <columns>
            <TableColumn fx:id="colCode" prefWidth="90" text="Code" />
            <TableColumn fx:id="colDescription" prefWidth="117.59994506835938" text="Description" />
            <TableColumn fx:id="colUnitCost" prefWidth="90.40003967285156" text="Stock Price" />
            <TableColumn fx:id="colWholesalePrice" prefWidth="118.39996337890625" text="Wholesale Price" />
            <TableColumn fx:id="colUnitPrice" prefWidth="92.79998779296875" text="Retail Price" />
            <TableColumn fx:id="colQtyOnHand" prefWidth="48.0" text="Qty" />
            <TableColumn fx:id="colBrand" prefWidth="96.79998779296875" text="Brand" />
            <TableColumn fx:id="colBarcode" prefWidth="66.4000244140625" text="Barcode" />
            <TableColumn fx:id="colSupId" prefWidth="66.40008544921875" text="Supplier" />
            <TableColumn fx:id="colDate" prefWidth="66.40008544921875" text="Date" />
            <TableColumn fx:id="colStatus" prefWidth="66.40008544921875" text="Status" />
         </columns>
      </TableView>
      <Label fx:id="lblId" layoutX="191.0" layoutY="164.0" prefHeight="26.0" prefWidth="150.0" styleClass="form-label" />
      <Rectangle arcHeight="15" arcWidth="15" fill="white" height="53.0" layoutX="62.0" layoutY="69.0" opacity="0.12" width="900.0" />
      <Label layoutX="86.0" layoutY="85.0" styleClass="form-label" text="Search by Description" />
      <JFXTextField fx:id="txtSearchDescription" layoutX="256.0" layoutY="80.0" onKeyReleased="#txtDescriptionOnKeyReleased" prefWidth="300" promptText="Type description here..." styleClass="form-field" />
      <JFXButton fx:id="btnSearch" layoutX="580.0" layoutY="79.0" onAction="#btnSearchOnAction" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #2980b9; -fx-background-radius: 8;" text="Search" textFill="white">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton fx:id="btnReset" layoutX="681.0" layoutY="79.0" onAction="#btnResetOnAction" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #7f8c8d; -fx-background-radius: 8;" text="Reset" textFill="white">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
      <JFXButton layoutX="715.0" layoutY="310.0" onAction="#btnPrintBarcodeOnAction" prefHeight="26.0" prefWidth="100.0" style="-fx-background-color:#6a1b9a; -fx-text-fill:white;" text="Print Barcode" />
      <JFXButton fx:id="btnBack" buttonType="RAISED" contentDisplay="LEFT" layoutX="30.0" layoutY="10.0" onAction="#btnBackOnAction" prefHeight="40.0" prefWidth="100.0" styleClass="back-button" text="â† Back" />

   </children>
</AnchorPane>
