<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="root" prefHeight="720.0" prefWidth="1020.0" style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.AutoCareCenter.controller.OilFormController">

   <children>

      <!-- Header bar -->
      <Rectangle fill="#1a237e" height="70.0" width="1020.0" />
      <Label layoutX="420.0" layoutY="10.0" style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Manage Oil Materials" textFill="WHITE" />
      <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="960.0" layoutY="15.0">
         <image>
            <Image url="@../asserts/people.png" />
         </image>
      </ImageView>

      <!-- Form background -->
      <Rectangle arcHeight="15.0" arcWidth="15.0" fill="white" height="174.0" layoutX="60.0" layoutY="119.0" opacity="0.12" width="900.0" />

      <!-- Labels and Fields -->
      <Label layoutX="190.0" layoutY="140.0" style="-fx-font-weight: bold;" text="Material Code" textFill="white" />
      <JFXTextField fx:id="txtCode" layoutX="190.0" layoutY="165.0" prefWidth="200.0" style="-fx-background-radius: 10;" />

      <Label fx:id="lblId" layoutX="190.0" layoutY="164.0" prefHeight="26.0" prefWidth="150.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" textFill="white" />

      <Label layoutX="440.0" layoutY="140.0" style="-fx-font-weight: bold;" text="Description" textFill="white" />
      <JFXTextField fx:id="txtDescription" layoutX="440.0" layoutY="165.0" prefWidth="200.0" style="-fx-background-radius: 10;" />

      <Label layoutX="690.0" layoutY="140.0" style="-fx-font-weight: bold;" text="Supplier ID" textFill="white" />
      <JFXComboBox fx:id="cmbSupId" layoutX="690.0" layoutY="165.0" prefWidth="150.0" style="-fx-background-radius: 10;" />

      <Label layoutX="190.0" layoutY="220.0" style="-fx-font-weight: bold;" text="Unit Price" textFill="white" />
      <JFXTextField fx:id="txtUnitPrice" layoutX="190.0" layoutY="245.0" prefWidth="200.0" style="-fx-background-radius: 10;" />

      <Label layoutX="440.0" layoutY="220.0" style="-fx-font-weight: bold;" text="Qty On Hand" textFill="white" />
      <JFXTextField fx:id="txtQtyOnHand" layoutX="440.0" layoutY="245.0" prefWidth="200.0" style="-fx-background-radius: 10;" />

      <Label layoutX="690.0" layoutY="220.0" style="-fx-font-weight: bold;" text="Brand" textFill="white" />
      <JFXTextField fx:id="txtBrand" layoutX="690.0" layoutY="245.0" prefWidth="150.0" style="-fx-background-radius: 10;" />

      <!-- Buttons -->
      <JFXButton fx:id="btnDelete" layoutX="290.0" layoutY="305.0" onAction="#btnDeleteOnAction" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 8;" text="Delete" textFill="white">
         <cursor><Cursor fx:constant="HAND" /></cursor>
      </JFXButton>

      <JFXButton fx:id="btnClear" layoutX="395.0" layoutY="305.0" onAction="#btnClearOnAction" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #7f8c8d; -fx-background-radius: 8;" text="Clear" textFill="white" />

      <JFXButton fx:id="btnUpdate" layoutX="500.0" layoutY="305.0" onAction="#btnUpdateOnAction" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #f39c12; -fx-background-radius: 8;" text="Update" textFill="white" />

      <JFXButton fx:id="btnSave" layoutX="605.0" layoutY="305.0" onAction="#btnSaveOnAction" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #2980b9; -fx-background-radius: 8;" text="Save" textFill="white" />

      <!-- Table -->
      <TableView fx:id="tblMaterial" layoutX="64.0" layoutY="350.0" onMouseClicked="#getMaterials" prefHeight="330.0" prefWidth="900.0" style="-fx-background-color: white; -fx-background-radius: 10;">
         <columns>
            <TableColumn fx:id="colCode" prefWidth="100.0" text="Code" />
            <TableColumn fx:id="colDescription" prefWidth="150.0" text="Description" />
            <TableColumn fx:id="colUnitPrice" prefWidth="120.0" text="Unit Price" />
            <TableColumn fx:id="colQtyOnHand" prefWidth="120.0" text="Qty On Hand" />
            <TableColumn fx:id="colSupId" prefWidth="120.0" text="Supplier ID" />
            <TableColumn fx:id="colBrand" prefWidth="100.0" text="Brand" />
            <TableColumn fx:id="colDate" prefWidth="96.80010986328125" text="Added Date" />
            <TableColumn fx:id="colStatus" prefWidth="123.199951171875" text="Status" />
         </columns>
      </TableView>

   </children>
</AnchorPane>
