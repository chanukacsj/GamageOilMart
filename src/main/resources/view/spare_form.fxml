   <Label layoutX="690" layoutY="220" styleClass="form-label" text="Brand" />
   <JFXTextField fx:id="txtBrand" layoutX="688" layoutY="245" prefWidth="170" styleClass="form-field" />

   <!-- SEARCH -->
   <Rectangle arcHeight="15" arcWidth="15" fill="white" height="53" layoutX="60" layoutY="75" opacity="0.12" width="900" />

   <Label layoutX="80" layoutY="90" styleClass="form-label" text="Search by Description" />

