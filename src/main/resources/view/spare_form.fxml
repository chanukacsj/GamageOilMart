   <Rectangle arcHeight="15" arcWidth="15" fill="white" height="148" layoutX="60" layoutY="139" opacity="0.12" width="900" />

   <!-- FORM LABELS & FIELDS -->
   <Label layoutX="190" layoutY="140" styleClass="form-label" text="Material Code" />
   <JFXTextField fx:id="txtCode" layoutX="190" layoutY="165" prefWidth="200" styleClass="form-field" />

   <Label layoutX="445" layoutY="140" styleClass="form-label" text="Description" />
   <JFXTextField fx:id="txtDescription" layoutX="440" layoutY="165" prefWidth="200" styleClass="form-field" />

   <Label layoutX="688" layoutY="140" styleClass="form-label" text="Supplier ID" />
