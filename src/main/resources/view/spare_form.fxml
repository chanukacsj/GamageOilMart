   <JFXButton fx:id="btnSave" layoutX="581.0" layoutY="317.0" onAction="#btnSaveOnAction" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #2980b9; -fx-background-radius: 8;" text="Save" textFill="white" />
   <JFXButton fx:id="btnBack" buttonType="RAISED" contentDisplay="LEFT" layoutX="30.0" layoutY="10.0" onAction="#btnBackOnAction" prefHeight="40.0" prefWidth="100.0" styleClass="back-button" text="â† Back" />
   <Label fx:id="lblId" layoutX="208.0" layoutY="168.0" prefHeight="26.0" prefWidth="150.0" styleClass="form-label" />
   <TableView fx:id="tblMaterial" layoutX="24.0" layoutY="375.0" onMouseClicked="#getMaterials" prefHeight="330.0" prefWidth="972.0" style="-fx-background-color: white; -fx-background-radius: 10;">
